<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tmdb_gray_black</item>
        <item name="colorAccent">@color/tmdb_green</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/layout_background</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorPrimary">@color/tmdb_white</item>
        <item name="android:textColorSecondary">@color/tmdb_white</item>
        <item name="android:textColorHint">@color/tmdb_white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>